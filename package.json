{
  "name": "urd-timekeeper",
  "version": "1.0.0",
  "description": "En Pomodoro-timer byggd som vanilla Web Component med stöd för overlay-läge för videoproduktion.",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "test": "jest",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "dev": "vite",
    "serve": "npx http-server dist -p 8000 --cors -o /overlay.html",
    "lint": "eslint src/ tests/",
    "lint:fix": "eslint src/ tests/ --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky"
  },
  "keywords": [
    "pomodoro",
    "timer",
    "web-component",
    "overlay",
    "productivity"
  ],
  "author": "Fredrik Svensson",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/JFSvensson/Urd-Timekeeper.git"
  },
  "homepage": "https://github.com/JFSvensson/Urd-Timekeeper",
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/jest": "^29.5.13",
    "@types/node": "^22.7.4",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdom": "^25.0.1",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "ts-jest": "^29.2.5",
    "typescript": "^5.6.2",
    "typescript-eslint": "^8.55.0",
    "vite": "^7.3.1"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml,css}": [
      "prettier --write"
    ]
  }
}
